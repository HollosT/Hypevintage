<section class="py-500" data-width="less">
    <h2 class="py-400">Return policy</h2>
    
    <article class="return-delivery-article border-bottom py-500">
        <h3 class="return-delivery-title py-300">
            {% render 'time' %}
            {{section.settings.time_title}}
        </h3>
        {{section.settings.time_description}}
    </article>
    <article class="return-delivery-article border-bottom py-500">
        <h3 class="return-delivery-title py-300">
            {% render 'packaging' %}
            {{section.settings.packaging_title}}
        </h3>
        {{section.settings.packaging_description}}
    </article>
    <article class="return-delivery-article border-bottom py-500">
        <h3 class="return-delivery-title py-300">
            {% render 'return' %}
            {{section.settings.return_title}}
        </h3>
        {% for block in section.blocks %}
            <p class="py-100">{{block.settings.return_body}}</p>
        {% endfor %}
    </article>
    <article class="return-delivery-article border-bottom py-500">
        <h3 class="return-delivery-title py-300">
            {% render 'delayed' %}
            {{section.settings.delayed_title}}
        </h3>
        {{section.settings.delayed_description}}
    </article>
    <article class="return-delivery-article  py-500">
        <h3 class="return-delivery-title py-300">
            {% render 'exchanges' %}
            {{section.settings.exchange_title}}
        </h3>
        {{section.settings.exchange_description}}
    </article>
   
    <div class="concat-action-container py-500">
        <h4>If you have more questions, contact us! We will get back to you as soon as possible.</h4>
        <a href="https://hypevintage-aalborg.myshopify.com/pages/contact" class="btn btn-active">Contact us</a>
    </div>

</section>

{% schema %}
    {
        "name": "Return",
        "class": "return-section",
        "settings": [
            {
                "type": "text",
                "id": "time_title",
                "default": "Example Heading",
                "label": "How long it can be returned title"
            },
            {
                "type": "richtext",
                "id": "time_description",
                "default": "<p>Example Paragraph</p>",
                "label": "How long it can be returned title"
            },
            {
                "type": "text",
                "id": "packaging_title",
                "default": "Example Heading",
                "label": "How it is packed title"
            },
            {
                "type": "richtext",
                "id": "packaging_description",
                "default": "<p>Example Paragraph</p>",
                "label": "How it is packed description"
            },
            {
                "type": "text",
                "id": "return_title",
                "default": "Example Heading",
                "label": "Return title"
            },
            {
                "type": "text",
                "id": "delayed_title",
                "default": "Example Heading",
                "label": "Delayed title"
            },
            {
                "type": "richtext",
                "id": "delayed_description",
                "default": "<p>Example Paragraph</p>",
                "label": "Delayed or missing refunds description"
            },
            {
                "type": "text",
                "id": "exchange_title",
                "default": "Example Heading",
                "label": "Exchange title"
            },
            {
                "type": "richtext",
                "id": "exchange_description",
                "default": "<p>Example Paragraph</p>",
                "label": "Exchange description"
            }
        ],
        "blocks": [
            {
                "name": "Return paragraphs",
                "type": "text",
                "settings": [
                    {
                        "type": "richtext",
                        "id": "return_body",
                        "label": "Return paragraphs"
                    }
                ]
            }
        ],
        "presets": [
        {
          "name": "Delivery",
          "blocks": [
            {
              "type": "text"
            }
          ]
        }
      ]
    }
  {% endschema %}