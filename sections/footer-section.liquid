{% schema %}
    {
      "name": "Footer",
      "class": "footer",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Footer"
        }
      ],
      "max_blocks": 3,
      "blocks": [
        {
            "type": "link_list",
            "name": "Navigation",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Quick Links"
                },
                {
                    "type": "link_list",
                    "id": "menu",
                    "label": "Menu"
                }
                
            ]
        },
        {
            "type": "text",
            "name": "Store details",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Store information"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Text"
                }
            ]
        }
      ],
      "presets": [
          {
              "category": "Footer",
              "name": "Footer"
          }
      ]
    }
    {% endschema %}