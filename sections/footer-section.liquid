<footer>
    {% for block in section.blocks %}
        {% assign item = block.settings %}
        {% if block.type == "link_list" %}
            <div >
                <h5>{{ item.title }}</h5>
                {% assign footer_linklist = item.menu %}
                <ul class="list-unstyled text-small">
                    {% for link in linklists[footer_linklist].links %}
                        <li>
                            <a href="{{ link.url }}">{{ link.title | escape }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% else if block.type == "text" %}
            <div class="col">

                <h5>{{ item.title }}</h5>
                <p>{{ item.description }}</p>
            </div>
        {% endif %}
    {% endfor %}
</footer>

{% schema %}
    {
      "name": "Footer",
      "tag": "section",
      "class": "footer",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Footer"
        }
      ],
      "max_blocks": 3,
      "blocks": [
        {
            "type": "link_list",
            "name": "Navigation",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Quick Links"
                },
                {
                    "type": "link_list",
                    "id": "menu",
                    "label": "Menu"
                }
                
            ]
        },
        {
            "type": "text",
            "name": "Store details",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Heading",
                    "default": "Store information"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Text"
                }
            ]
        }
      ],
      "presets": [
        {
          "name": "Footer",
          "settings": {
            "title": "footer"
          },
          "blocks": [
            {
              "type": "link_list"
            },
            {
              "type": "text"
            }
          ]
        }
      ]
    }
    {% endschema %}